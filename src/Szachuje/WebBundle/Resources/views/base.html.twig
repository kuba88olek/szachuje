<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block stylesheets %}
    {% stylesheets
        'bundles/szachujeweb/css/bootstrap_grid.css'
        'bundles/szachujeweb/css/style.css'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
    <header id="header">
        <div class="width">
            <div class="row">
                <div class="col-md-6 hidden-xs">
                    <h1 id="logo"><img src="{{ asset('bundles/szachujeweb/img/logo.png') }}" alt=""/></h1>
                </div>
                <div class="col-md-6 col-sm-12">
                    <nav>
                        <ul id="menu-top">
                            <li>
                                <a{% if app.request.attributes.get('_route') == 'szachuje_index' %} class="active"{% endif %}
                                        href="{{ path('szachuje_index') }}">STRONA GŁÓWNA</a>
                            </li>
                            <li>
                                <a href="">O NAS</a>
                            </li>
                            <li>
                                <a{% if app.request.attributes.get('_route') == 'szachuje_contact' %} class="active"{% endif %}
                                        href="{{ path('szachuje_contact') }}">KONTAKT</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <div class="page-body width">
        {% block body %}{% endblock %}
    </div>
    <footer id="footer">
        <div class="width row">
            <div class="col-md-6">
                <h4 id="footer-contact-title">
                    Kontakt
                </h4>
                <div id="footer-contact">
                    <div class="element">SZACHUJE agencja public relations</div>
                    <div class="element">ul. Warszawska 1/2, 12-345 WARSZAWA<br /></div>
                    <div class="element">T: (+48) 12 345 678</div>
                    <a href="mailto:biuro@szachuje.com" class="element">biuro@szachuje.com</a>
                </div>
            </div>
            <div class="col-md-6 hidden-xs">
                <nav>
                    <ul id="menu-footer">
                        <li>
                            <a{% if app.request.attributes.get('_route') == 'szachuje_index' %} class="active"{% endif %}
                                    href="{{ path('szachuje_index') }}">strona głowna</a>
                        </li>
                        <li>
                            <a href="">o nas</a>
                        </li>
                        <li>
                            <a{% if app.request.attributes.get('_route') == 'szachuje_contact' %} class="active"{% endif %}
                                    href="{{ path('szachuje_contact') }}">kontakt</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </footer>
    {% block javascripts %}{% endblock %}
</body>
</html>
